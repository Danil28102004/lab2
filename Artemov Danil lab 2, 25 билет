#include <iostream>
#include <cmath>

int main() {
    double x1, y1, x3, y3;
    std::cout << "Введите координаты точки A (x1, y1): ";
    std::cin >> x1 >> y1;
    std::cout << "Введите координаты точки C (x3, y3): ";
    std::cin >> x3 >> y3;

    double width = std::abs(x3 - x1);
    double height = std::abs(y3 - y1);

    std::cout << "Площадь: " << width * height << "\n";
    std::cout << "Периметр: " << 2 * (width + height) << "\n";

    return 0;
}
